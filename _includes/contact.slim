section#contact
  .container
    .row
      .col-lg-8.col-lg-offset-2.text-center
        h2.section-heading Let's Get In Touch!
        hr.primary/
        p Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!
      .col-lg-2.col-lg-offset-2.text-center
        a href=("https://twitter.com/{{ site.twitter_username }}")
          i.fa.fa-twitter.fa-3x.wow.bounceIn data-wow-delay=".1s"
          p {{ site.twitter_username }}
      .col-lg-2.col-lg-offset-1.text-center
        a href=("mailto:{{ site.email }}")
          i.fa.fa-envelope-o.fa-3x.wow.bounceIn data-wow-delay=".1s"
          p  {{ site.email }}
      .col-lg-2.col-lg-offset-1.text-center
        a href=("https://github.com/{{ site.github_username }}")
          i.fa.fa-github.fa-3x.wow.bounceIn data-wow-delay=".1s"
          p {{ site.github_username }}
